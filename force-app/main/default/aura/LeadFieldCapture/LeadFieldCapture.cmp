<aura:component controller="LeadController" implements="flexipage:availableForAllPageTypes" access="global">
    <!-- Attributes -->
    <aura:attribute name="leadRecord" type="Lead" default="{'sobjectType': 'Lead'}" />
    <aura:attribute name="isSaved" type="Boolean" default="false" />

    <!-- UI -->
    <lightning:card title="Capture Lead Fields" iconName="standard:lead">
        <div class="slds-p-around_medium">
            <lightning:input aura:id="firstName" label="First Name" value="{!v.leadRecord.FirstName}" />
            <lightning:input aura:id="lastName" label="Last Name" value="{!v.leadRecord.LastName}" />
            <lightning:input aura:id="email" label="Email" value="{!v.leadRecord.Email}" />
            <lightning:input aura:id="company" label="Company" value="{!v.leadRecord.Company}" />
        </div>
        <div class="slds-p-around_medium">
            <lightning:button label="Save" variant="brand" onclick="{!c.handleSave}" />
            <aura:if isTrue="{!v.isSaved}">
                <div class="slds-text-color_success slds-m-top_small">Lead saved successfully!</div>
            </aura:if>
        </div>
    </lightning:card>
</aura:component>